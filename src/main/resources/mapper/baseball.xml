<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="toy.example.KDTBE5_TOYPROJECT.repository.BaseballRepository">


    <select id="getAllPlayerByPosition" resultType="toy.example.KDTBE5_TOYPROJECT.model.Player">
        SELECT * FROM player WHERE position = #{position}
    </select>



    <select id="getAllTeam" resultType="toy.example.KDTBE5_TOYPROJECT.model.Team">
        SELECT * FROM team
    </select>


    <select id="getAllPlayerByTeam" resultType="toy.example.KDTBE5_TOYPROJECT.model.Player">
        SELECT * FROM player WHERE team = #{team}
    </select>

</mapper>